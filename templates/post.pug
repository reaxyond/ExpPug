extends basic-layout.pug 

block content 
  h2= post.title
  p= post.content

  div
    each comment in comments 
      div.row-mb-3.row
        span.col.flex-grow-0.flex-shrink-0.rounded
          a(href="/user/" + comment.userId): img(width="50"  height="50" src="/upload/" + comment.avatar)
        div.col
          p= comment.content 
          span posted by #[a(href="/user/" + comment.userId) #{comment.email}] 
          small= comment.createAt
      hr
    else 
      div.row.mb-3 暂时没有人发表评论
      hr
  

  if isLogin
    form(action="/comment" method='POST')
      input(type="hidden" name="postId" value= paramID)
      textarea(name="content" required)
      button 提交
  else 
    p 想发表评论?试试#[a(href="/login") 登录]或#[a(href="/register") 注册]